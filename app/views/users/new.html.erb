  <% end %>

    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "form-control", class: "col-xs-4", placeholder: "email address", :autofocus => true %>

    <%= f.label :username, class: "sr-only" %>
    <%= f.text_field :username, class: "form-control", placeholder: "name" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "password" %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password" %>

      <%= submit_tag 'Sign up', class: "btn btn-lg btn-primary btn-block" %>

<% end %>

  </div>
</div>


