<div class="login-form-bounding-box">
<%= form_tag('/login', class: "form-signin card card-container ") do %>

  <%= label_tag  :email, nil, class: "sr-only" %>
  <%= text_field_tag :email, nil, class: "form-control", placeholder: "email address", :autofocus => true %>

  <%= label_tag  :password, nil, class: "sr-only" %>
  <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>

    <%= submit_tag 'Log in', class: "btn btn-lg btn-primary btn-block" %>

<% end %>

</div>