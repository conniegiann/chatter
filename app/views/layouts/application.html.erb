<!DOCTYPE html>
<html>
<head>
  <title>TwitterClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

<meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body class="<%= params[:controller] %>-<%= params[:action] %>">

    <nav class="navbar navbar-fixed-top navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">chatter</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
              <% if @current_user %>        

                <li><%= link_to '<i class="fa fa-home"></i> home'.html_safe, user_tweets_path(@current_user)%></li>

                <li><%= link_to '<i class="fa fa-pencil"></i> edit profile'.html_safe, edit_user_path(@current_user)%></li>                

                <li><%= link_to '<i class="fa fa-comments-o"> feed</i>'.html_safe, posts_path(:id => @current_user.id)%></li>

                <li><%= link_to '<i class="fa fa-users"></i> users'.html_safe, users_path(:id => @current_user.id)%></li>
                <li><%= link_to "logout #{ @current_user.username }",login_path, :method => 'delete' %></li>
              <% end %>
                </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->

<div class="container">
<%= yield %>
</div>

</body>
</html>
